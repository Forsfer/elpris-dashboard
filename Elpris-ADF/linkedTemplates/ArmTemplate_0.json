{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "Elpris-ADF"
		},
		"AzureDataLakeStorage1_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorage1'"
		},
		"sql_elpris_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'sql_elpris'"
		},
		"AzureDataLakeStorage1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://elprisprojekt.dfs.core.windows.net/"
		},
		"elpris_api_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://www.elprisetjustnu.se/api/v1/prices/"
		},
		"sql_elpris_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sql-elpris-northeurope.database.windows.net"
		},
		"sql_elpris_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "elpris"
		},
		"sql_elpris_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "sqladmin"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureDataLakeStorage1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('AzureDataLakeStorage1_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('AzureDataLakeStorage1_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/elpris_api')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "RestService",
				"typeProperties": {
					"url": "[parameters('elpris_api_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/sql_elpris')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('sql_elpris_properties_typeProperties_server')]",
					"database": "[parameters('sql_elpris_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('sql_elpris_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('sql_elpris_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_datalake_prices')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureDataLakeStorage1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"folderPath": {
						"type": "string"
					},
					"fileName": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().fileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().folderPath",
							"type": "Expression"
						},
						"fileSystem": "elprisprojekt"
					}
				},
				"schema": {}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureDataLakeStorage1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_elpris_api')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "elpris_api",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"relativePath": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "RestResource",
				"typeProperties": {
					"relativeUrl": {
						"value": "@dataset().relativePath",
						"type": "Expression"
					}
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/elpris_api')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_raw_elpris')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureDataLakeStorage1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"folderPath": {
						"type": "string"
					},
					"fileName": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().fileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().folderPath",
							"type": "Expression"
						},
						"fileSystem": "elprisprojekt"
					}
				},
				"schema": {}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureDataLakeStorage1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_sql_bronze_prices')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "sql_elpris",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "raw_id",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "SEK_per_kWh",
						"type": "decimal",
						"precision": 10,
						"scale": 5
					},
					{
						"name": "EUR_per_kWh",
						"type": "decimal",
						"precision": 10,
						"scale": 5
					},
					{
						"name": "EXR",
						"type": "decimal",
						"precision": 12,
						"scale": 6
					},
					{
						"name": "time_start",
						"type": "varchar"
					},
					{
						"name": "time_end",
						"type": "varchar"
					},
					{
						"name": "load_timestamp",
						"type": "datetime2",
						"scale": 7
					},
					{
						"name": "source_file",
						"type": "varchar"
					}
				],
				"typeProperties": {
					"schema": "bronze",
					"table": "prices"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/sql_elpris')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pl_bronze_load_elpris')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Pipelinen läser in senaste timmens JSON-filen med elpriser från Data Lake och laddar in datan i bronslagrets SQL-tabell. Vid varje körning skrivs hela dagens data in, och med upsert säkerställs att endast nya eller uppdaterade rader påverkas i tabellen.",
				"activities": [
					{
						"name": "copy_prices_to_bronze",
						"description": "Hämtar elpriser från Data Lake och laddar dem till bronze-lagret.\nWrite behavior är satt till Upsert baserat på time_start för att undvika duplicerade rader när dagens fil innehåller historiska timmar.",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "JsonSource",
								"additionalColumns": [
									{
										"name": "source_file",
										"value": "$$FILENAME"
									}
								],
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "JsonReadSettings"
								}
							},
							"sink": {
								"type": "AzureSqlSink",
								"writeBehavior": "upsert",
								"upsertSettings": {
									"useTempDB": true,
									"keys": [
										"time_start"
									]
								},
								"sqlWriterUseTableLock": false,
								"disableMetricsCollection": false
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "$['SEK_per_kWh']"
										},
										"sink": {
											"name": "SEK_per_kWh",
											"type": "Decimal"
										}
									},
									{
										"source": {
											"path": "$['EUR_per_kWh']"
										},
										"sink": {
											"name": "EUR_per_kWh",
											"type": "Decimal"
										}
									},
									{
										"source": {
											"path": "$['EXR']"
										},
										"sink": {
											"name": "EXR",
											"type": "Decimal"
										}
									},
									{
										"source": {
											"path": "$['time_start']"
										},
										"sink": {
											"name": "time_start",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['time_end']"
										},
										"sink": {
											"name": "time_end",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['source_file']"
										},
										"sink": {
											"name": "source_file",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "ds_datalake_prices",
								"type": "DatasetReference",
								"parameters": {
									"folderPath": {
										"value": "@concat(\n  'raw/elpriser'\n)\n",
										"type": "Expression"
									},
									"fileName": {
										"value": "@concat(\n  'prices_',\n  formatDateTime(addHours(utcNow(), -1), 'yyyyMMdd'),\n  '.json'\n)\n",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "ds_sql_bronze_prices",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ds_datalake_prices')]",
				"[concat(variables('factoryId'), '/datasets/ds_sql_bronze_prices')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pl_ingest_api')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Pipelinen tar in json-data från elpris-APIet och sparar det i en fil för dagens datum i Data Lake:n. En trigger exekuterar pipelinen 5 minuter efter varje timme och skriver då över tidigare innehåll i filen så att den inkluderar senaste datan.",
				"activities": [
					{
						"name": "copy_api_prices_to_datalake",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "RestSource",
								"httpRequestTimeout": "00:01:40",
								"requestInterval": "00.00:00:00.010",
								"requestMethod": "GET",
								"paginationRules": {
									"supportRFC5988": "true"
								}
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "JsonWriteSettings"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "ds_elpris_api",
								"type": "DatasetReference",
								"parameters": {
									"relativePath": {
										"value": "@concat(\n  formatDateTime(utcNow(),'yyyy'),\n  '/',\n  formatDateTime(utcNow(),'MM'),\n  '-',\n  formatDateTime(utcNow(),'dd'),\n  '_SE3.json'\n)",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "ds_raw_elpris",
								"type": "DatasetReference",
								"parameters": {
									"folderPath": {
										"value": "@concat(\n  'raw/elpriser/'\n)\n",
										"type": "Expression"
									},
									"fileName": {
										"value": "@concat(\n  'prices_',\n  formatDateTime(addHours(utcNow(), -1), 'yyyyMMdd'),\n  '.json'\n)",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": [],
				"lastPublishTime": "2026-02-08T09:06:25Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ds_elpris_api')]",
				"[concat(variables('factoryId'), '/datasets/ds_raw_elpris')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/trigger_ingestion_hourly')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Trigger som körs timvis för att hämta elpriserna från aktuell timme som nyss har passerat.",
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "pl_ingest_api",
							"type": "PipelineReference"
						},
						"parameters": {}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Hour",
						"interval": 1,
						"startTime": "2026-02-08T13:05:00",
						"timeZone": "W. Europe Standard Time"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/pl_ingest_api')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/trigger_ingestion_sql_hourly')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "pl_bronze_load_elpris",
							"type": "PipelineReference"
						},
						"parameters": {}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Hour",
						"interval": 1,
						"startTime": "2026-02-17T12:08:00",
						"timeZone": "W. Europe Standard Time"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/pl_bronze_load_elpris')]"
			]
		}
	]
}